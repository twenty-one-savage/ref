.fill
  background-color $white
.fill_primary
  background-color $primary
.fill_primary-light
  background-color $primary-light
.fill_gray
  background-color $gray
.fill_gray-light
  background-color $gray-light
.fill_black
  background-color $dark
.fill_gray-dark
  background-color $gray-dark
.fill_gray-secondary
  background-color $gray-secondary
.fill_blue
  background-color $blue
.fill_image
  background-repeat no-repeat
  background-position center
  background-size cover
.fill_image-h1
  background-repeat no-repeat
  background-position top center
  background-size cover
  border-radius 20px

.fill_image1
  background-image url("../images/base/bg-companies-intro.png")

.fill_image2
  background-image url("../images/base/bg-about-intro.png")

.fill_image3
  background-image url("../images/base/bg-main-intro.jpg")
.fill_image3_sm
  background-image none
.fill_image-header
  background-image url("../images/base/header-image.jpg")
  background-position center bottom
.fill_image-appointment
  position relative
  &:before
    content ''
    position absolute
    top 0
    left 0
    width 120px
    height 140px
    background-image url("../images/base/appointment_background-image1.png")
    background-repeat no-repeat
    background-position center
  &:after
    content ''
    position absolute
    top 0
    right 0
    width 120px
    height 140px
    background-image url("../images/base/appointment_background-image2.png")
    background-repeat no-repeat
    background-position center

.fill_image-infosec
  background-repeat no-repeat
  &_image1
    background-image url("../images/base/infosec_background-image1.jpg")
  &_image2
    background-image url("../images/base/infosec_background-image2.jpg")
  &_image3
    background-image url("../images/base/infosec_background-image3.jpg")

.fill_image-slider
    background-image url("../images/base/slider-1.jpg")
    background-position center
    background-size cover
    background-repeat no-repeat

.fill_image-map
  background-image url("../images/base/map.png")
  background-position center
  background-size cover
  background-repeat no-repeat

.fill_image-green
  background-image url("../images/base/header-bg.jpg")
  background-color $primaryh

.fill_image-green_with-image
  background-image url("../images/base/fill_image-green.jpg")
  background-color $primaryh

.fill
  &_vk
    background-color $vk
  &_twitter
    background-color $twiiter
  &_facebook
    background-color $facebook
  &_ok
    background-color $ok
  &_whatsap
    background-color $whatsap
  &_mail
    background-color $mail
  &_print
    background-color $gray

@media (min-width: 768px) and (max-width: 1199.98px)
  .fill_image-slider
    background-position-y: center


.fill_shadow
  backgroun-colord rgba(255,255,255,1)
  background-color -moz-radial-gradient(center, ellipse cover, rgba(255,255,255,1) 0%, rgba(255,255,255,0) 69%, rgba(255,255,255,0) 100%)
  background-color -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%, rgba(255,255,255,1)), color-stop(69%, rgba(255,255,255,0)), color-stop(100%, rgba(255,255,255,0)))
  background-color -webkit-radial-gradient(center, ellipse cover, rgba(255,255,255,1) 0%, rgba(255,255,255,0) 69%, rgba(255,255,255,0) 100%)
  background-color -o-radial-gradient(center, ellipse cover, rgba(255,255,255,1) 0%, rgba(255,255,255,0) 69%, rgba(255,255,255,0) 100%)
  background-color -ms-radial-gradient(center, ellipse cover, rgba(255,255,255,1) 0%, rgba(255,255,255,0) 69%, rgba(255,255,255,0) 100%)
  backgroun-colord radial-gradient(ellipse at center, rgba(255,255,255,1) 0%, rgba(255,255,255,0) 75%, rgba(255,255,255,0) 100%)
  /*filter progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#ffffff', GradientType=1 )*/

@media(max-width 991.98px)
  .fill_image-header
    background-position left bottom
@media(max-width 767.98px)
  .fill_black_sm
    background-color $dark
  .fill_image3_sm
    background-image url("../images/base/bg-main-intro.jpg")
  .fill_image-appointment
    &:after
      top auto
      bottom 0
@media(max-width 575.98px)
  .fill_image-header
    background-position center bottom
