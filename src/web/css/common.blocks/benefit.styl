.benefit
  &__wrapper
    display flex
    align-items center

  &__number
    margin-right 10px
    font-size 55px
    line-height 1
    font-weight 800
    color $primary

  &__value
    font-size 20px
    line-height 1
    font-weight 700
    color $black
    &_percent
      font-size 35px

@media(max-width 767.98px)
  .benefit
    &__wrapper
      margin-left auto
      margin-right auto
      width max-content
    &__number
      font-size 45px