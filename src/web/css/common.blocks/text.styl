.text
  font-size $font-size
  &-equal
    line-height: 1
  &-thin
    font-weight: 100
  &-gray
    color $gray
  &-light-gray
    color: $gray-light
  &-decorate
    text-decoration underline
.text-primary
  color $primary !important
.text-secondary
  color $secondary !important
a.text-secondary
  &:hover
  &:focus
    color $primary !important
.text-light
  color #fff !important
a.text-light
  &:hover
  &:focus
    color #fff !important
a.text-primary
  &:hover
  &:focus
    color $primaryh !important
.text-main
  color $main !important
a.text-main
a .text-main
  &:hover
  &:focus
    color $primary !important
.text-info
  color $info !important
a.text-info
  &:hover
  &:focus
    color $primary !important
.text-blue
  color $blue !important
a.text-blue
  &:hover
  &:focus
    color $primary !important
.text-decoration-underline
  text-decoration underline
.text-md
  font-size $font-size_md

.text-grey
  color $gray-dark
a.text-grey
  &:hover
  &:focus
    color $primary !important
.text-danger
  color $danger !important

button.text-danger
a.text-danger
  &:hover
  &:active
  &:focus
    color $dangerh !important
    background-color $white !important
    border-color $dangerh

.text-pehlevi
  font-family "Pehlevi"
.text-bold
  font-weight 700
.text-gray-lighter
  color $gray-lighter