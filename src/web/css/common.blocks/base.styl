.hidden
  display none !important

.visually-hidden:not(:focus):not(:active)
  position: absolute
  width: 1px
  height: 1px
  margin: -1px
  border: 0
  padding: 0
  white-space: nowrap
  clip-path: inset(100%)
  clip: rect(0 0 0 0)
  overflow: hidden


/* Подключение шрифтов */
@font-face
  font-family "Gilroy"
  font-style normal
  font-weight 400
  src url(../fonts/Gilroy-Regular.woff)

@font-face
  font-family "Gilroy"
  font-style normal
  font-weight 500
  src url(../fonts/Gilroy-Medium.woff)

@font-face
  font-family "Gilroy"
  font-style normal
  font-weight 700
  src url(../fonts/Gilroy-Bold.woff)

@font-face
  font-family "Gilroy"
  font-style normal
  font-weight 800
  src url(../fonts/Gilroy-Heavy.woff)

html
  font-size 16px

body
  padding-top 60px
  min-width 320px
  // font-family "Gilroy", "Tahoma", sans-serif
  font-family: "Gilroy", -apple-system, system-ui, "BlinkMacSystemFont", "Segoe UI", "Roboto", "Helvetica Neue", "Arial", sans-serif;
a
  color $primaryh
  transition $animation
  &:hover
  &:focus
    text-decoration none
    color $primary
img
  max-width 100%
  height auto

.table-bordered
  border-width: 1px
  border-color $gray

.list-reset
  padding 0
  margin 0
  list-style none

.animated
  transition: all .25s ease

.border_bottom_white
  border-color #fff

.row-list-reset
  padding 0
  list-style: none

.width-fit-content
  width fit-content

.section__title
  margin-bottom 48px
  font-size 24px
  text-transform uppercase
  font-weight 700

.mt-100
  margin-top -100px

.vasd
  height 100vh

.section-padding
  padding-top 48px
  padding-bottom 48px

.i_icon-more
  transform rotate(-90deg)

.del-pseudo
  &:before
  &:after
    display none !important

.bw-hover //bw - black-white
  &:hover
    filter grayscale(1)

.custom-control-label
  padding-left 20px

.custom-checkbox .custom-control-label::before
  border-color $primary

.custom-control-label::before
.custom-control-label::after
  top auto
  width 2rem
  height 2rem

.custom-control-input:checked~.custom-control-label::before
  border-color $primary
  background-color $primary

.pt-xl-custom
  padding-top 40px
.pb-xl-custom
  padding-bottom 40px

@media (max-width 991.98px)
  .section-padding
    padding-top 38px
    padding-bottom 38px

@media (max-width 767.98px)
  body
    font-size 14px
  .section-padding
    padding-top 28px
    padding-bottom 28px
  .stash-md
    position relative
    margin-bottom 0
    height 30px
    overflow hidden
    z-index 1
    &::after
      content ''
      position absolute
      bottom 0
      left 0
      width 100%
      height 100%
      z-index 2
      background-image -webkit-gradient(linear, left bottom, left top, color-stop(30%, rgba(255, 255, 255, 0.9)), to(rgba(255, 255, 255, 0.2)))
      background-image -o-linear-gradient(bottom, rgba(255, 255, 255, 0.9) 30%, rgba(255, 255, 255, 0.2))
      background-image linear-gradient(to top, rgba(255, 255, 255, 0.9) 30%, rgba(255, 255, 255, 0.2))
  .section__title
    margin-bottom 24px
    font-size 18px
  .custom-control-label
    font-size 12px
  .custom-control-label::before
  .custom-control-label::after
    width 1.25rem
    height 1.25rem


@media (max-width: 425px)
  .p-xs-0
    padding: 0 !important
  .d-xs-none
    display none !important
  .fancybox-content
    padding 40px 20px

@media (max-width 359.98px)
  .col-6_wide
    flex 0 0 100%
    max-width 100%

@media (min-width 768px)
  .w-md-100
    width 100%
  .pt-xl-custom
    padding-top 50px
  .pb-xl-custom
    padding-bottom 50px

@media (min-width 991.98px)
  .offset-xl-3_custom
    margin-left 19.33333%
  .offset-xl-4_custom
    margin-left 36.33333%
  .pt-xl-custom
    padding-top 60px
  .pb-xl-custom
    padding-bottom 60px

@media (min-width 1199.98px)
  .pt-xl-custom
    padding-top 80px

.fz-13
  font-size 13px