.h
	font-weight bold
	text-transform uppercase
	&_not-upper
		text-transform none
.h1
	font-size 32px
	text-transform none
.h2
	font-size 24px
	&_section
		margin-bottom 48px
.h3
	font-size 20px
.h4
	font-size 18px
.h5
	font-size 16px
.h6
	font-size 14px

@media (max-width 1199.98px)
	.h1
		font-size 28px

@media (max-width 991.98px)
	.h1
		font-size 26px
	.h2
		font-size 21px
		&_section
			margin-bottom 24px
	.h3
		font-size 24px

@media (max-width 767.98px)
	.h1
		font-size 24px
	.h2
		font-size 20px
	.h3
		font-size 18px
	.h4
		font-size 16px
	.h5
		font-size 14px
	.h6
		font-size 12px