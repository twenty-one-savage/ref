.logo
  display flex
  &__text
    font-size 36px
    line-height 36px

@media(max-width 1199.98px)
  .logo
    &__text
      font-size 30px
      line-height 30px
    &__icon
      font-size 24px
      height 24px
@media (max-width 575.98px)
  .logo
    &__text
      font-size 25px
      line-height 25px
    &__icon
      font-size 22px
      height 22px
@media (max-width 359.98px)
  .logo
    &__text
      font-size 22px
      line-height 22px
    &__icon
      font-size 20px
      height 20px