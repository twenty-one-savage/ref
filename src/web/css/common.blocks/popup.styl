.popup
  &__text
    text-align center
  &__label
    padding 10px 40px
    margin 0 auto
    width max-content
    display flex
    flex-direction column
    font-size 14px
    text-align center
    background-color $white
    border-radius 5px
  &__input
    max-width 150px
    font-size 16px
    border none
    &::placeholder
      font-size 16px
      font-weight 700
      color $primary