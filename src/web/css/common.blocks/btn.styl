.btn
  padding 0.75rem 3rem
  font-size 1rem
  line-height 1.2
  font-weight bold
  text-transform uppercase
  border-radius $border-radius
  border-radius 30px
  border-width 2px
  transition: $animation

.btn_with_icon
  display -ms-inline-flexbox
  display inline-flex
  -ms-flex-align center
  align-items center
  -ms-flex-pack center
  justify-content center
  .btn__icon
    margin-right: 0.5rem
    display block
    font-size 1rem
    height 1rem


.btn-primary-light
  color $main
  background-color $primary-light
  &:hover
  &:focus
    color $white
    & ~ .i
      color $white
      transition: all .4s ease



.btn-sm
  padding 0.55rem 2rem
  min-width 125px
  font-size 0.55rem
  .btn__icon
    font-size 0.55rem
    height 0.55rem
.btn-lg
  font-size 1rem
  .btn__icon
    font-size 1rem
    height 1rem
.btn-primary
  color #fff
  background-color $primary
  border-color $primary
  &:hover
    color $primary
    background-color $white
    border-color $primary
  &.focus
  &:focus
    background-color: $white
    box-shadow $box-shadow-primary
  &.disabled
  &:disabled
    color #fff
    background-color $primary
    border-color $primary
  &:not(:disabled):not(.disabled).active
  &:not(:disabled):not(.disabled):active
  .show>&.dropdown-toggle
    color #fff
    background-color $primaryh
    border-color $primaryh
  &:not(:disabled):not(.disabled).active:focus
  &:not(:disabled):not(.disabled):active:focus
  .show>&.dropdown-toggle:focus
    box-shadow $box-shadow-primary



.btn-outline-primary
  color $primary
  border-color $primary
  &:hover
    color #fff
    background-color $primary
    border-color $primary
  &.focus
  &:focus
    box-shadow $box-shadow-primary
  &.disabled
  &:disabled
    color $primary
    background-color transparent
  &:not(:disabled):not(.disabled).active
  &:not(:disabled):not(.disabled):active
  .show>&.dropdown-toggle
    color #fff
    background-color $primary
    border-color $primary
  &:not(:disabled):not(.disabled).active:focus
  &:not(:disabled):not(.disabled):active:focus
  .show>&.dropdown-toggle:focus
    box-shadow $box-shadow-primary

.btn-light
  color $primary
  background-color $light
  border-color $light
  &:hover
    color $primary
    background-color $lighth
    border-color $lighth
  &.focus
  &:focus
    box-shadow $box-shadow-light
  &.disabled,&:disabled
    color $primary
    background-color $light
    border-color $light
  &:not(:disabled):not(.disabled).active
  &:not(:disabled):not(.disabled):active
  .show>&.dropdown-toggle
    color $primary
    background-color $lighth
    border-color $lighth
  &:not(:disabled):not(.disabled).active:focus
  &:not(:disabled):not(.disabled):active:focus
  .show>&.dropdown-toggle:focus
    box-shadow $box-shadow-light

.btn-outline-light
  color $light
  border-color $light
  background-color #0000
  &:hover
    color $primary
    background-color $light
    border-color $light
.btn-outline-light.focus,
.btn-outline-light:focus
  box-shadow $box-shadow-light
.btn-outline-light.disabled,
.btn-outline-light:disabled
  color $light
  background-color transparent
.btn-outline-light:not(:disabled):not(.disabled).active,
.btn-outline-light:not(:disabled):not(.disabled):active,
.show>.btn-outline-light.dropdown-toggle
  color $primary
  background-color $light
  border-color $light
.btn-outline-light:not(:disabled):not(.disabled).active:focus,
.btn-outline-light:not(:disabled):not(.disabled):active:focus,
.show>.btn-outline-light.dropdown-toggle:focus
  box-shadow $box-shadow-light


@media (max-width 1199.98px)
  .btn
    font-size 14px

@media (max-width 767.98px)
  .btn
    font-size 12px
    padding 0.4rem 3rem
    min-width auto
